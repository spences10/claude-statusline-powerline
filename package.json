{
	"name": "claude-statusline-powerline",
	"version": "0.0.5",
	"description": "Beautiful vim-style powerline statusline for Claude Code with git integration, session tracking, and cost monitoring",
	"main": "dist/statusline.js",
	"bin": {
		"claude-statusline-powerline": "./dist/statusline.js",
		"claude-statusline-install": "./dist/install.js"
	},
	"scripts": {
		"build": "npm run schema && tsc",
		"schema": "npx ts-node src/utils/generate-schema.ts",
		"dev": "tsc --watch",
		"test": "pnpm run build && node dist/test.js",
		"demo": "pnpm run build && node dist/demo/demo.js",
		"prepublishOnly": "pnpm run build",
		"postinstall": "node dist/install.js",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build && changeset publish"
	},
	"keywords": [
		"claude-code",
		"statusline",
		"powerline",
		"git",
		"cli",
		"terminal",
		"status-bar",
		"developer-tools",
		"cost-tracking",
		"session-monitoring",
		"typescript",
		"ai-tools",
		"productivity",
		"vim-style",
		"theming"
	],
	"author": "Scott Spence <spences10@gmail.com> (https://scottspence.com)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/claude-statusline-powerline.git"
	},
	"bugs": {
		"url": "https://github.com/spences10/claude-statusline-powerline/issues"
	},
	"homepage": "https://github.com/spences10/claude-statusline-powerline#readme",
	"engines": {
		"node": ">=14.0.0"
	},
	"files": [
		"dist/statusline.js",
		"dist/statusline.d.ts",
		"dist/install.js",
		"dist/install.d.ts",
		"dist/config.js",
		"dist/config.d.ts",
		"dist/core/",
		"dist/segments/",
		"dist/separators/",
		"dist/themes/",
		"dist/utils/git.js",
		"dist/utils/git.d.ts",
		"dist/types.d.ts",
		"dist/font-profiles.js",
		"dist/font-profiles.d.ts",
		"statusline.schema.json",
		"README.md",
		"CHANGELOG.md"
	],
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@types/node": "^24.2.1",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"typescript-json-schema": "^0.65.1"
	}
}