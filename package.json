{
	"name": "claude-statusline-powerline",
	"version": "0.0.11",
	"description": "Beautiful powerline-style statusline for Claude Code with git integration, session tracking, and cost monitoring",
	"main": "dist/statusline.js",
	"bin": {
		"claude-statusline-powerline": "./dist/statusline.js",
		"claude-statusline-install": "./dist/install.js"
	},
	"scripts": {
		"build": "npm run schema && tsc",
		"schema": "npx ts-node src/utils/generate-schema.ts",
		"dev": "tsc --watch",
		"test": "pnpm run test:comprehensive",
		"test:comprehensive": "pnpm run build && node dist/tests/test-runner.js",
		"test:unit": "pnpm run build && node dist/tests/unit/base-segment.test.js && node dist/tests/unit/config.test.js && node dist/tests/unit/registry.test.js",
		"test:integration": "pnpm run build && node dist/tests/integration/statusline.test.js",
		"demo": "pnpm run build && node dist/demo/demo.js --powerline --nerd-font",
		"demo:powerline": "pnpm run build && node dist/demo/demo.js --powerline",
		"demo:nerd-font": "pnpm run build && node dist/demo/demo.js --nerd-font",
		"prepublishOnly": "pnpm run build",
		"postinstall": "node dist/install.js",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build && changeset publish"
	},
	"keywords": [
		"claude-code",
		"statusline",
		"powerline",
		"git",
		"cli",
		"terminal",
		"status-bar",
		"developer-tools",
		"cost-tracking",
		"session-monitoring",
		"typescript",
		"ai-tools",
		"productivity",
		"theming"
	],
	"author": "Scott Spence <spences10@gmail.com> (https://scottspence.com)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/claude-statusline-powerline.git"
	},
	"bugs": {
		"url": "https://github.com/spences10/claude-statusline-powerline/issues"
	},
	"homepage": "https://github.com/spences10/claude-statusline-powerline#readme",
	"engines": {
		"node": ">=14.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@types/node": "^24.2.1",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"typescript-json-schema": "^0.65.1"
	}
}